<?xml version="1.0"?>

<portlet-app
	version="2.0"
	xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">    
    
    <portlet>
        <portlet-name>Newsletter-Admin-Faces</portlet-name>
        <display-name>Admin Faces</display-name>
        <portlet-class>com.rcs.newsletter.commons.NewsletterResourcePortlet</portlet-class>
        
        <init-param>
            <name>javax.portlet.faces.defaultViewId.view</name>
            <value>/xhtml/admin/admin.xhtml</value>
        </init-param>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
        </supports>
                <!--<resource-bundle>Language</resource-bundle> -->
        <portlet-info>
            <title>Newsletter Administration</title>
            <short-title>Newsletter</short-title>
            <keywords>newsletter Portlet</keywords>
        </portlet-info>
    </portlet>

    <portlet>
        <portlet-name>Newsletter-Registration</portlet-name>
        <display-name>Admin Faces</display-name>
        <portlet-class>org.portletfaces.bridge.GenericFacesPortlet</portlet-class>
        <init-param>
            <name>javax.portlet.faces.defaultViewId.view</name>
            <value>/xhtml/registration.xhtml</value>
        </init-param>
        <init-param>
            <name>javax.portlet.faces.defaultViewId.edit</name>
            <value>/xhtml/registration-edit.xhtml</value>
        </init-param>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
            <portlet-mode>edit</portlet-mode>
        </supports>
        <portlet-info>
            <title>Newsletter Registration</title>
            <short-title>Registration</short-title>
            <keywords>newsletter registration</keywords>
        </portlet-info>
    </portlet>
    
    <portlet>
        <portlet-name>Newsletter-Registration-Confirm</portlet-name>
        <display-name>Registration Confirmation</display-name>
        <portlet-class>org.portletfaces.bridge.GenericFacesPortlet</portlet-class>
        <init-param>
            <name>javax.portlet.faces.defaultViewId.view</name>
            <value>/xhtml/registrationSucess.xhtml</value>
        </init-param>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
        </supports>
                <!--<resource-bundle>Language</resource-bundle> -->
        <portlet-info>
            <title>lrfaces Portlet</title>
            <short-title>Registration Confirmation</short-title>
            <keywords>Registration Confirmation</keywords>
        </portlet-info>
    </portlet>
        
</portlet-app>